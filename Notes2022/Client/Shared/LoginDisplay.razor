@using Syncfusion.Blazor.Buttons

@inject NavigationManager Navigation

@if (myState.IsAuthenticated)
{
    <SfButton @onclick="GotoProfile" class="logbutton">@myState.UserInfo?.Email</SfButton>
    <SfButton @onclick="BeginSignOut" class="logbutton">Log out</SfButton>
    <SfButton @onclick="GotoHome" class="homebutton">Home</SfButton>
}
else
{
    <SfButton @onclick="GotoRegister" class="logbutton">Register</SfButton>
    <SfButton @onclick="GotoLogin" class="logbutton">Login</SfButton>
    <SfButton @onclick="GotoHome" class="homebutton">Home</SfButton>
}

<style>
    .logbutton {
        color: white;
        background-color: darkcyan;
        margin-right: 5px;
        margin-left: 5px;
        border-radius: 6px;
    }

        .logbutton:hover {
            color: white;
            background-color: blue;
        }

    .homebutton {
        color: white;
        background-color: darkblue;
        margin-right: 5px;
        margin-left: 5px;
        border-radius: 6px;
    }

        .homebutton:hover {
            color: white;
            background-color: blue;
        }
</style>
