@inject Notes2022Server.Notes2022ServerClient Client

<div class="dialogs">
    @((MarkupString)@text)

    <button type="button" @onclick="Cancel" class="btn btn-info btn-sm">Close</button>
</div>

@code {
    [CascadingParameter] BlazoredModalInstance ModalInstance { get; set; }

    private string text = string.Empty;

    /// <summary>
    /// Get some simple stuff from server
    /// </summary>
    /// <returns></returns>
    protected override async Task OnInitializedAsync()
    {
        text = (await Client.GetTextFileAsync(new AString() { Val = "helpdialog2.html" })).Val;
    }

    private void Cancel()
    {
        ModalInstance.CancelAsync();
    }
}