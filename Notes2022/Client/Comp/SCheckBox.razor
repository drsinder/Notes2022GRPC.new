@using Notes2022.Client.Pages
@using Notes2022.Shared
@using System.Text

@inject Notes2022Server.Notes2022ServerClient Client
@inject NavigationManager NavMan

<SfCheckBox @bind-Checked="isChecked" @onclick="OnClick"></SfCheckBox>

@code {
    [Parameter] public Tracker Tracker {get; set;}
    [Parameter] public int fileId { get; set; }
    [Parameter] public bool isChecked { get; set; }

    public SCheckModel Model { get; set; }

    protected override void OnParametersSet()
    {
        Model = new SCheckModel
        {
            IsChecked = isChecked,
            FileId = fileId
        };
    }

    public async Task OnClick()
    {
        isChecked = !isChecked;

        if (isChecked) // create item
        {
            await Client.CreateSequencerAsync(Model, myState.AuthHeader);
        }
        else // delete it
        {
            await Client.DeleteSequencerAsync(Model, myState.AuthHeader);
        }
        await Tracker.Shuffle();
    }
}
