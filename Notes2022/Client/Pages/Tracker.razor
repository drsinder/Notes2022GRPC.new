@page "/tracker"

@using Notes2022.Shared
@using Blazored.SessionStorage
@using Notes2022.Client.Comp

@inject NavigationManager NavMan
@inject Notes2022Server.Notes2022ServerClient Client

<h3>Tracked Notes Files List</h3>

@if (files == null)
{
    <p class="center"><em>Loading...</em></p>
}
else
{
            <table class="table">
                <thead>
                    <tr>
                        <th>Move Up/Down</th>
                        <th>Check to Follow</th>
                        <th>
                            NoteFile Name
                        </th>
                        <th>
                            NoteFile Title
                        </th>
                        <th>
                            Last Edited
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (GNotefile file in files)
                    {
                        GSequencer CurrentTracker = trackers.SingleOrDefault(p => p.NoteFileId == file.Id);
                        bool current = CurrentTracker != null;
                        <tr>
                            <td>
                                <TrackerMover CurrentTracker="@CurrentTracker" Trackers="@trackers" Tracker="@this"></TrackerMover> 
                            </td>
                            <td>
                                <SCheckBox fileId="@file.Id" isChecked="@current" Tracker="@this"></SCheckBox>
                            </td>
                            <td>
                                @file.NoteFileName
                            </td>
                            <td>
                                @file.NoteFileTitle
                            </td>
                            <td>
                                @Globals.LocalTimeBlazor((file.LastEdited).ToDateTime()).ToShortTimeString() @Globals.LocalTimeBlazor((file.LastEdited).ToDateTime()).ToShortDateString()
                            </td>

                        </tr>
                    }

                </tbody>

            </table>

            <button type="button" @onclick="Cancel" class="btn btn-info btn-sm">Done</button>

}



